@model ProductViewModel
@{
    ViewData["Title"] = "Add new Categories";
}
<div class="row align-self-center justify-content-center">
    <div class="col-12">

        <h3><i class="fas fa-plus"></i>Add a Product</h3>
        <form method="Post" enctype="multipart/form-data">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group col-md-12">
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" class="form-control">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="@Model.Quntity"></label>
                        <input asp-for="@Model.Quntity" class="form-control">
                        <span asp-validation-for="@Model.Quntity" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="@Model.Price"></label>
                        <input asp-for="@Model.Price" class="form-control">
                        <span asp-validation-for="@Model.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="custom-file">
                        <label asp-for="@Model.Photo" class="form-label"></label>
                        <input asp-for="@Model.PhotoFile" class="form-control" />
                    </div>
                    <div class="form-group col-md-12">
                    <label asp-for="@Model.CategoryId" class="control-label"></label>
                    <div class="col-sm-4">
                            <Select asp-for="@Model.CategoryId" class="form-control sb-chosenselect">
                            <customoptions asp-entity-name="Categories" asp-showdefaultitem="true"></customoptions>
                            </Select>
                            <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-4 ms-2" style="width:20%;">save</button>

        </form>
    </div>
</div>