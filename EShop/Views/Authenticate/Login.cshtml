@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="col-md-3 card p-2">
    <form method="post">
        <div class="form-row">
            <div class="form-group mt-2">
            <label asp-for="Email" ></label>
            <input asp-for="Email" type="email" class="form-control" id="inputEmail4" placeholder="Email">
                <span asp-validation-for="Email" class="alert-danger"></span>
        </div>
        </div>

        <div class="form-row">
            <div class="form-group mt-2">
                <label asp-for="Password" ></label>
                <input asp-for="Password" type="password" class="form-control" id="inputPassword4" placeholder="Password">
                <span asp-validation-for="Password" class="alert-danger"></span>
            </div>
        </div>

        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent mt-2">
            <div class="text-center">
                <button type="submit" class="btn btn-outline-success">Sign In</button>
                </div>
        </div>
    </form>
</div>
